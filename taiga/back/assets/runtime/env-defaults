#!/bin/bash

DEBUG=${DEBUG:-false}
TEMPLATE_DEBUG=${TEMPLATE_DEBUG:-false}

DB_HOST=${DB_HOST:-localhost}
DB_PORT=${DB_PORT:-5432}
DB_USER=${DB_USER:-postgres}
DB_PASS=${DB_PASS:-postgres}
DB_NAME=${DB_NAME:-postgres}

TAIGA_HOST=${TAIGA_HOST:-localhost}

TAIGA_ROOT_USERNAME=${TAIGA_ROOT_USERNAME:-admin}
TAIGA_ROOT_EMAIL=${TAIGA_ROOT_EMAIL:-admin@admin.com}

TAIGA_HTTPS=${TAIGA_HTTPS:-false}
TAIGA_SECRET_KEY=${TAIGA_SECRET_KEY:-secretkey}

PUBLIC_REGISTER_ENABLED=${PUBLIC_REGISTER_ENABLED:-true}

WEBHOOKS_ENABLED=${WEBHOOKS_ENABLED:-false}

STATS_ENABLED=${STATS_ENABLED:-false}
FRONT_SITEMAP_CACHE_TIMEOUT=${FRONT_SITEMAP_CACHE_TIMEOUT:-360}

FRONT_SITEMAP_ENABLED=${FRONT_SITEMAP_ENABLED:-false}
FRONT_SITEMAP_CACHE_TIMEOUT=${FRONT_SITEMAP_CACHE_TIMEOUT:-8640}

EMAIL_ENABLED=${EMAIL_ENABLED:-false}
EMAIL_HOST=${EMAIL_HOST:-smtp.gmail.com}
EMAIL_PORT=${EMAIL_PORT:-587}
EMAIL_USER=${EMAIL_USER:-example@gmail.com}
EMAIL_PASS=${EMAIL_PASS:-secret}
EMAIL_USE_TLS=${EMAIL_USE_TLS:-true}

TAIGA_EMAIL=${TAIGA_EMAIL:-notifications@example.com}
DEFAULT_FROM_EMAIL=${DEFAULT_FROM_EMAIL:-noreply@example.com}

CELERY_ENABLED=${CELERY_ENABLED:-false}
CELERY_AMQP_NAME=${CELERY_AMQP_NAME:-/}

EVENTS_ENABLED=${EVENTS_ENABLED:-false}
EVENTS_AMQP_NAME=${EVENTS_AMQP_NAME:-taiga}

AMQP_HOST=${AMQP_HOST:-localhost}
AMQP_PORT=${AMQP_PORT:-5672}
AMQP_USER=${AMQP_USER:-guest}
AMQP_PASS=${AMQP_PASS:-guest}

REDIS_HOST=${REDIS_HOST:-localhost}
REDIS_PORT=${REDIS_PORT:-6379}
REDIS_DB_NUMBER=${REDIS_DB_NUMBER:-0}

GITHUB_ENABLED=${AMQP_HOST:-false}
GITHUB_URL=${GITHUB_URL:-https://github.com/}
GITHUB_API_URL=${GITHUB_API_URL:-https://api.github.com/}
GITHUB_API_CLIENT_ID=${GITHUB_API_CLIENT_ID:-yourgithubclientid}
GITHUB_API_CLIENT_SECRET=${GITHUB_API_CLIENT_SECRET:-yourgithubclientsecret}

FEEDBACK_ENABLED=${FEEDBACK_ENABLED:-false}
FEEDBACK_EMAIL=${FEEDBACK_EMAIL:-support@taiga.io}